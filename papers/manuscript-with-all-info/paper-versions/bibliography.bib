number = {Pt B},
pages = {383--395},
pmid = {28986208},
title = {{Dynamic functional connectivity and brain metastability during altered states of consciousness}},
url = {http://dx.doi.org/10.1016/j.neuroimage.2017.09.065},
volume = {180},
year = {2018}
}
