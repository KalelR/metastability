	issn = {10075704},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S1007570419300966},
	doi = {10.1016/j.cnsns.2019.03.028},
	abstract = {Abstract We investigate the dynamical properties of two coupled neural networks with 2,048 identical Hodgkin–Huxley type bursting neurons. The internal connection architecture of each network follows a small-world topology and the external connection scheme is based on the local mean field potential, where one network receives the signal from the other. To analyze the system, we use Kuramoto order parameter computed over each neuron data, and recurrence quantification analyses, particularly the ratio of recurrent points belonging to diagonal lines of the recurrence plot RP , namely the determinism, computed over the local mean field potential of the networks, an easier experimentally accessible data. We analyze the complex synchronization scenario depicted by the network as a function of internal and external coupling parameters. Particularly, we identify regions of non-monotonic dependence of the synchronization level as a function of the coupling strength; coupling induced phase desynchronization (PD), where the synchronization levels are similar to those expected for randomly distributed phases; almost complete spike synchronization ({\textbackslash}SS) for which even spikes composing a burst are synchronized. This regime occurs as a product of the fast modulated signal imposed by the coupling between networks and weak internal coupling; finally, bursting synchronization (BS) regions are associated with slow modulated internal coupling.},
	journal = {Communications in Nonlinear Science and Numerical Simulation},
	author = {Budzinski, R C and Boaretto, B R R and Prado, T L and Lopes, S R},
	year = {2019},
	pages = {140--151},
}

@article{prado_2014,
	title = {Synchronization of bursting {Hodgkin}-{Huxley}-type neurons in clustered networks.},
