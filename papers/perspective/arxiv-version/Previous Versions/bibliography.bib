	month = jul,
	year = {2017},
	pmid = {28764402},
	note = {Publisher: American Institute of Physics Inc.
\_eprint: 1706.08070},
	keywords = {complex networks, large-scale systems, oscillators, synchronisation},
	pages = {73115},
	file = {Attachment:/home/kalel/Zotero/storage/ZYNX7FJ2/Papadopoulos et al. - 2017 - Development of structural correlations and synchronization from adaptive rewiring in networks of Kuramoto o.pdf:application/pdf},
}

@article{kelly_2011,
	title = {On the topology of synchrony optimized networks of a {Kuramoto}-model with non-identical oscillators},
	volume = {21},
	issn = {10541500},
	url = {https://pubmed.ncbi.nlm.nih.gov/21721788/},
	doi = {10.1063/1.3590855},
	abstract = {We study synchrony optimized networks. In particular, we focus on the Kuramoto model with non-identical native frequencies on a random graph. In a first step, we generate synchrony optimized networks using a dynamic breeding algorithm, whereby an initial network is successively rewired toward increased synchronization. These networks are characterized by a large anti-correlation between neighbouring frequencies. In a second step, the central part of our paper, we show that synchrony optimized networks can be generated much more cost efficiently by minimization of an energy-like quantity E and subsequent random rewires to control the average path length. We demonstrate that synchrony optimized networks are characterized by a balance between two opposing structural properties: A large number of links between positive and negative frequencies of equal magnitude and a small average path length. Remarkably, these networks show the same synchronization behaviour as those networks generated by the dynamic rewiring process. Interestingly, synchrony-optimized network also exhibit significantly enhanced synchronization behaviour for weak coupling, below the onset of global synchronization, with linear growth of the order parameter with increasing coupling strength. We identify the underlying dynamical and topological structures, which give rise to this atypical local synchronization, and provide a simple analytical argument for its explanation. © 2011 American Institute of Physics.},
	number = {2},
	journal = {Chaos},
	author = {Kelly, David and Gottwald, Georg A.},
	year = {2011},
	note = {Publisher: American Institute of Physics Inc.},
	keywords = {David Kelly, doi:10.1063/1.3590855, Georg A Gottwald, MEDLINE, National Center for Biotechnology Information, National Institutes of Health, National Library of Medicine, NCBI, NIH, NLM, pmid:21721788, PubMed Abstract},
}

@article{carareto_2009,
	title = {Optimized network structure for full-synchronization},
